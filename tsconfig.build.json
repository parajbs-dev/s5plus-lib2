{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,

    "lib": ["dom", "es2020"],
    "target": "es2020",
    "moduleResolution": "nodenext",
    "outDir": "dist/mjs",
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "types/**/*.d.ts"],
  "exclude": ["src/**/*.test.ts"]
}
